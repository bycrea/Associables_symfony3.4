<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{{ (title is defined) ? title : 'Associables.org' }}</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('assets/dist/css/style_tempo.css') }}">

    {% block stylesheets %}
    {% endblock %}
</head>
<body>
    {% block header %}
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="collapse navbar-collapse d-flex justify-content-center" id="navbarNav">
                <ul class="navbar-nav">

                    {#              exemple de condition ternaire twig              #}
                    {#  {{ ('argument' in 'test argument') ? 'success' : 'fail' }}  #}

                    {% set route = app.request.attributes.get('_route') %}

                    <li class="nav-item {{ ('home' in route) ? 'active' : '' }}">
                        <a class="nav-link" href="{{ path('home') }}">Accueil</a>
                    </li>
                    <li class="nav-item {{ ('mentions' in route) ? 'active' : '' }}">
                        <a class="nav-link" href="{{ path('mentions') }}">Mentions</a>
                    </li>
                    <li class="nav-item {{ ('associations' in route) ? 'active' : '' }}">
                        <a class="nav-link" href="{{ path('associations') }}">Associations</a>
                    </li>
                    <li class="nav-item {{ ('basket' in route) ? 'active' : '' }}">
                        <a class="nav-link" id="basket-link" href="{{ path('basket') }}">Panier

                        {#   Appel la fonction 'getBasketTotal' avec en paramètre  #}
                        {# 'app.request' afin de pouvoir récupérer la requête HTTP #}
                            <span>{{ getBasketTotal( app.request ) }}</span>
                        </a>
                    </li>
                </ul>
            </div>

            {# Récupère et affiche le nom d'utilisateur Si celui-ci est connecté #}
            {% if app.user.username is defined %}
                <div class="btn-group">
                    <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        {{ app.user.username }}
                    </button>
                    <div class="dropdown-menu dropdown-menu-right">
                        <a class="dropdown-item" href="{{ path('user_donations') }}">Mon Compte</a>
                        <a class="dropdown-item" href="{{ path('fos_user_security_logout') }}">Déconnexion</a>
                    </div>
                </div>
            {% else %}
                <div class="btn-group">
                    <a href="{{ path('fos_user_security_login') }}" class="btn btn-info">Connexion</a>
                </div>
            {% endif %}
        </nav>
    {% endblock %}

    {# Permet d'affciher les messages envoyé avec la méthode symfony 'addFlash()' et contenu dans app.flashes
        doc : https://symfony.com/doc/3.4/controller.html#flash-messages #}
    {% for key, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ key }}" role="alert">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    {% block content %}
    {% endblock %}

    <script src="https://code.jquery.com/jquery-3.3.1.min.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    {% block scripts %}
    {% endblock %}
</body>
</html>