{% extends 'base.html.twig' %}

{% block header %}
    {# ----------------- Menu dashboard ----------------- #}
    {% include 'includes/menu_user_dashboard.html.twig' %}
{% endblock %}

{% block content %}

    {# ----------------- Historique des Dons aux associations ----------------- #}
    <h2 class="title-page">Historiques des associations</h2>

    <div class="box-assos">
        {% for asso in userAssosAmount %}
            <div class="assos">
                <a href="{{ path('association_id', {id: asso[0].id}) }}">
                    {% if asso[0].image is null %}
                        <img src="{{ asset(ImgAssosDefault) }}" alt="image par défaut" style="width: 10%;">
                    {% else %}
                        <img src="{{ asset(ImgAssosFolder ~ asso[0].image) }}" alt="{{ asso[0].name }}" style="width: 10%;">
                    {% endif %}
                    <span>{{ asso[0].name }}</span>
                </a>
                - <span>Total des Dons : {{ asso[1] }}€</span>
            </div>
        {% else %}
            <div class="assos">
                <span>Vous n'avez pas encore donné à une association</span>
            </div>
        {% endfor %}
    </div>

{% endblock %}

