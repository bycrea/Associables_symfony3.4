{% block scripts %}
    <script>

        calc()

        $(document).ready(function () {

            $('#donation').change(function () {
                calc()
            })
        })

        function calc() {
            var don = $('#donation').val()
            var result = don - (don * 75 / 100)

            $('#result').text(result + '€')
        }
    </script>
