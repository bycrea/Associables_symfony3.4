{% trans_default_domain 'FOSUserBundle' %}

<main id="dashboard">
    <div class="container">
        <div class="login">
            {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
            {{ form_widget(form) }}
            <div class="btn-login">
                <input type="submit" value="{{ 'profile.edit.submit'|trans }}" class="btn btn-warning btn-sm"/>
                <a href="{{ path('user_infos') }}" class="btn btn-info btn-sm">Retour</a>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</main>

